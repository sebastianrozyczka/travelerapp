<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="textType" value="text" dbms="mysql, postgresql"/>
    <property name="textType" value="varchar(1000000)" dbms="h2"/>

    <changeSet id="001-init" author="rozyczkas">
        <createTable tableName="country">
            <column name="country_id" autoIncrement="true" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="description" type="varchar(1000)"/>
            <column name="average_temperature" type="decimal(19,2)"/>
            <column name="image_url" type="varchar(255)"/>
        </createTable>
        <createTable tableName="region">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="description" type="varchar(1000)"/>
            <column name="image_url" type="varchar(255)"/>
        </createTable>
        <createTable tableName="city">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="description" type="varchar(1000)"/>
            <column name="image_url" type="varchar(255)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>